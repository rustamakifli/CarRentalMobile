<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.myapplication">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen"
        tools:targetApi="31">
        <activity
            android:name=".screens.main_screens.FavoriteScreen"
            android:exported="false"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".screens.main_screens.RequestBookScreen"
            android:exported="false"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".screens.auth.VerificationScreen"
            android:exported="false"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".screens.auth.CreateNewPasswordScreen"
            android:exported="false"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".screens.auth.ForgotPasswordScreen"
            android:exported="false"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".screens.main_screens.ProfileScreen"
            android:exported="false"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".screens.main_screens.OnboardingScreen"
            android:exported="false"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".screens.auth.LoginScreen"
            android:exported="true"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".screens.auth.RegisterScreen"
            android:exported="true"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".screens.auth.SplashScreen"
            android:exported="true"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".screens.main_screens.HomeActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".screens.main_screens.SingleCarActivity"
            android:theme="@style/AppTheme" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>