<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10sp"
    tools:context=".RequestBookScreen">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="25sp"
        android:paddingVertical="10dp"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/carSingleImageView"
            android:layout_width="match_parent"
            android:src="@drawable/ic_profile"
            android:layout_height="40dp"
            android:layout_marginRight="10sp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textFontWeight="600"
                android:text="Tesla Roadster"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="139 Trips â— Joined Sep 2020"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:textFontWeight="400"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#131313"
                android:textSize="15dp"
                android:textFontWeight="600"
                android:text="$26.32/h"/>

        </LinearLayout>

        <Button
            android:id="@+id/procedToBuyButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/drop_down_button_background"
            android:text="Details"
            android:layout_marginHorizontal="10sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="164dp"
            tools:layout_editor_absoluteY="430dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10sp"
            android:layout_marginTop="100sp"
            android:textFontWeight="900"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:text="Trip Date and Time"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10sp"
            android:layout_marginTop="30sp"
            android:textFontWeight="900"
            android:textColor="@color/black"
            android:text="Start Date"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 Aug,Thu"
                android:textSize="15dp"
                android:textFontWeight="600"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5:00 AM"
                android:textSize="12dp"
                android:textFontWeight="400"/>


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10sp"
            android:layout_marginTop="50sp"
            android:textFontWeight="900"
            android:textColor="@color/black"
            android:text="End Date"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17 Aug,Thu"
                android:textSize="15dp"
                android:textFontWeight="600"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:00 AM"
                android:textSize="12dp"
                android:textFontWeight="400"/>


        </LinearLayout>

        <Button
            android:id="@+id/bookNowButton"
            android:layout_width="390sp"
            android:layout_height="60dp"
            android:background="@drawable/drop_down_button_background"
            android:text="Proceed to buy"
            android:layout_marginHorizontal="10sp"
            android:layout_marginTop="10sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="164dp"
            tools:layout_editor_absoluteY="430dp" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>